{
    "include": ["./src/**/*.ts", "./test/**/*.ts", "../core.ts/src/utils/Convert.ts"],
    "exclude": ["./dist/**/*", "./externals/**/*"],
    "compilerOptions": {
        "outDir": "./dist/",
        "paths": {
            "fonts/*": ["../../shared/assets/fonts/*"],
            "fest/*": ["../../shared/fest/*"],
            "fest/cdnImport": ["../../cdnImport.mjs"],
            "fest/dom": ["./src/index.ts"],
            "fest/core": ["../core.ts/src/index.ts"],

            "fest/veela": ["../veela.css/src/index.ts"],
            "fest/veela/*": ["../veela.css/src/scss/*"],
            "fest/veela-runtime": ["../veela.css/src/scss/runtime/index.ts"],
            "fest/veela-runtime/*": ["../veela.css/src/scss/runtime/*"],
            "fest/veela-runtime/index": ["../veela.css/src/scss/runtime/index.scss"],
            "fest/veela-lib": ["../veela.css/src/scss/lib/index.scss"],
            "fest/veela-lib/*": ["../veela.css/src/scss/lib/*"],
            "fest/veela-mixins": ["../veela.css/src/scss/lib/mixins/index.scss"],
            "fest/veela-mixins/*": ["../veela.css/src/scss/lib/mixins/*"],

            "veela": ["../veela.css/src/index.ts"],
            "veela-runtime": ["../veela.css/src/scss/runtime/index.ts"],
            "veela-runtime/index": ["../veela.css/src/scss/runtime/index.scss"],
            "veela-runtime/*": ["../veela.css/src/scss/runtime/*"],
            "veela-lib": ["../veela.css/src/scss/lib/index.scss"],
            "veela-lib/*": ["../veela.css/src/scss/lib/*"],
            "veela-mixins": ["../veela.css/src/scss/lib/mixins/index.scss"],
            "veela-mixins/*": ["../veela.css/src/scss/lib/mixins/*"],
        },
        "target": "ESNext",
        "module": "ESNext",
        "lib": ["ESNext", "DOM", "WebWorker"],
        "esModuleInterop": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "allowJs": true,
        "allowArbitraryExtensions": true,
        "allowSyntheticDefaultImports": true,
        "allowUmdGlobalAccess": true,
        "allowUnreachableCode": true,
        "allowUnusedLabels": true,
        "noImplicitAny": false,
        "declaration": false,
        "noImplicitThis": false,
        "inlineSources": true,
        "inlineSourceMap": true,
        "sourceMap": false,
        "typeRoots": ["plugins/global.d.ts"],
        "experimentalDecorators": true
    }
}
